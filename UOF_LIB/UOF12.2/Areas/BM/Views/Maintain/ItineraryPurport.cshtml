@model Ede.Uof.EIP.BM.dl.CTB_EIP_BM_SCHEDULE_SUB
@{
    //"行程主旨維護"
    ViewBag.Title = @Html.BMResource("BM_Schedule_Subject_Maintainence");

    Layout = "~/Areas/BM/Views/share/_LayoutMasterPage.cshtml";
    
    <style>
            .input-group-addon, .input-group-btn {
        white-space: initial;
    }
    </style>
}
<script>
    function check() {




        $('#saveButton').click();

    }


</script>

<div id="main" class="clearfix">
    <div class="topTabs-header clearfix">
        <h1 class="secInfo">
            @*行程主旨維護*@
            @Html.BMResource("BM_Schedule_Subject_Maintainence")
        </h1>
        <button class="return-btn" onclick="goBack()"><i class="fa fa-reply"></i></button>
    </div>
    @using (Html.BeginForm("ScheduleSubSave", "Maintain", FormMethod.Post, new { enctype = "multipart/form-data" }))
    { 
        @Html.HiddenFor(model => model.SUBJECT_ID)
        <div class="tab-content">
            <div class="row">
                <div class="col-sm-6">
                    <div class="input-group mb20">
                        <span id="" class="input-group-addon">
                            <span>
                                <span style="color:#FF0000;">*</span>
                                @*名稱*@
                                @Html.BMResource("BM_Schedule_Subject")
                            </span>
                        </span>

                        @Html.BMTextBoxFor(model => model.SUBJECT_NAME, new { @class = "form-control", required = "required" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="input-group mb20">
                        <span id="" class="input-group-addon">
                            <span>
                                @*型態*@
                                @Html.BMResource("BM_Category")
                            </span>
                        </span>
                        @Html.BMDropDownListFor(model => model.SUBJECT_TYPE, (IEnumerable<SelectListItem>)ViewBag.BUSINESS_LIST, new { @class = "form-control" })
                    </div>
                </div>
            </div>


            <div class="text-center">
                <button type="button" onclick="check()" class="btn btn-warning xs100 xs-mb10">
                    @*儲存*@
                    @Html.BMResource("BM_Save")
                </button>
                <button type="submit" id="saveButton" class="btn btn-warning xs100 xs-mb10" style="margin:0 10px;display:none;">
                    @*儲存*@
                    @Html.BMResource("BM_Save")
                </button>
                <button type="button" class="btn btn-warning xs100" onclick="goBack()">
                    @*返回*@
                    @Html.BMResource("BM_Return")
                </button>
            </div>
        </div>
    }
</div>

<script>
    $(".menu-maintain").addClass("active");
</script>

<!-- 英文溢位調整 -->
<script>
    $(".input-group").each(function () {
        var label_height = $(this).height();
        $(this).children(".form-control").css('height', label_height);
    });
</script>