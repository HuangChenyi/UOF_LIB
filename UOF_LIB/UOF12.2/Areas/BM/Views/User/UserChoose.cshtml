                        <td>
                            <input type="checkbox" />
                        </td>
                        <td>
                            <a href="../User/UserIn">Nana</a>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
        <div class="text-center">
            <button type="button" class="btn btn-warning xs100 mb10">確認</button>
            <button type="button" class="btn btn-warning close-btn xs100 mb10" onclick="goBack()">取消</button>
        </div>
    </div>
</div>

