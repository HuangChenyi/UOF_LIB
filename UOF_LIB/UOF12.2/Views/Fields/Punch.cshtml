<div class="ui form" ng-class="hasError">
    <div class="ui blue pointing secondary menu">
        <a class="item active" data-tab="first">補刷卡</a>
        <a class="item" data-tab="second">其他</a>
    </div>
    <div class="ui tab segment active" data-tab="first">
        <div class="field" ng-class="hasError">
            <uof-checkbox ng-model="workTimeChecked" ng-change="workTimeChanged()">補上班卡</uof-checkbox>
        </div>
        <div class="field">
            <uof-date-time-picker ng-model="workTime">
            </uof-date-time-picker>           
        </div>
        <div class="field"  ng-class="hasError">
            <uof-checkbox ng-model="offTimeChecked" ng-change="offTimeChanged()">補下班卡</uof-checkbox>            
        </div>
        <div class="field">
            <uof-date-time-picker ng-model="offTime">
            </uof-date-time-picker>
        </div>
    </div>
    <div class="ui tab segment" data-tab="second">
        <div class="field" ng-class="hasError">
            <uof-checkbox ng-model="clearChecked" ng-change="clearChanged()">清空當日刷卡資料</uof-checkbox>        
        </div>        
    </div>  
    <div class="ui error message">
        <div>
            請選擇補刷卡項目
        </div>
    </div>    
    <div class="field required">
        <label>歸屬日期</label>
        <input type="text" ng-model="belongDate" class="belongDate" readonly>
    </div>    
</div>