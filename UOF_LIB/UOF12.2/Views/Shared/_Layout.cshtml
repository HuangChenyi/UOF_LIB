@using System.Web.Optimization;

<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />

    @*Set the viewport width to device width for mobile *@
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">


    <title>@ViewBag.Title</title>

    @Styles.Render("~/bundles/semanticui/css", "~/bundles/picker/css")

    @RenderSection("head", required: false)
    @*@Scripts.Render("~/bundles/modernizr")*@
    <link rel="stylesheet/less" type="text/css" href="~/mForm/Content/Less/style.less">
    <style>
        body#example, body#example .ui.header {
            font-family: "Segoe UI", Arial, Helvetica, "文泉驛正黑", "WenQuanYi Zen Hei", "微軟正黑體", "Microsoft JhengHei", "黑體-繁", "Heiti TC", "微软雅黑", "Microsoft YaHei", sans-serif;
        }

        .field.error .ui.label {
            white-space: normal !important;
        }
    </style>
    @*@Scripts.Render("~/bundles/uof/js")*@

    <script>

         @if (ViewBag.UserId != null)
         {
             <text>
        uofScript = {};
        uofScript.setting = {
            userId: '@ViewBag.UserId',
            serverRoot: '@ViewBag.ServerRoot',
            token: '@ViewBag.Token'
        };

        </text>
         }


    </script>

</head>
<body id="example" ng-app="MobileForm" ng-controller="rootCtrl">



    @RenderBody()

    <div ui-view autoscroll="false" class="form" style="height: 100%"></div>



    @*Use the Scripts section to define page specific scripts*@
    @RenderSection("scripts", required: false)


    <script>
        less = {
            async: true
        };



    </script>
</body>
</html>