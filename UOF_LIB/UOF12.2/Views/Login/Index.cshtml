@using System.Web.Optimization;

<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />

    @*Set the viewport width to device width for mobile *@
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>@ViewBag.Title</title>
   
    <style type="text/css">
        .background {
            background-image: url("../App_Themes/Fashion/images/loginbg.jpg");
        }

        .ui.grid {
            height: 100%;
        }

         body,.ui.button,.ui.form input[type="text"],.ui.form input[type="password"] {
            font-family: "Segoe UI", Arial, Helvetica,"文泉驛正黑", "WenQuanYi Zen Hei", "微軟正黑體", "Microsoft JhengHei", "黑體-繁","Heiti TC","微软雅黑","Microsoft YaHei", sans-serif !important;
        }
    </style>
    <link href="~/MForm/Content/SemanticUI/semantic.min.css" rel="stylesheet" />
</head>
<body>
    <div  class="ui padded equal height grid">
        <div class="sixteen wide stretched column">
            <div class="ui equal height two column grid">
                <div class="computer tablet only nine wide tablet ten wide computer column background">
                    
                </div>
                <div class="sixteen wide mobile seven wide tablet six wide computer center aligned stretched column">
                    <div class="ui padded equal height grid">
                        <div class="top aligned row">
                            <div class="column">
                                <h2 class="ui teal image header">
                                    <img src="../Common/Images/1steLogo.gif" class="ui small image">
                                    <div class="ui hidden divider"></div>
                                    <div class="content">
                                        Welcome to the <BR />Best U-Office Force System
                                    </div>
                                </h2>
                                <form class="ui large form">
                                    <div class="ui stacked segment">
                                        <div class="field">
                                            <div class="ui left icon input">
                                                <i class="user icon"></i>
                                                <input type="text" name="email" placeholder="帳號">
                                            </div>
                                        </div>
                                        <div class="field">
                                            <div class="ui left icon input">
                                                <i class="lock icon"></i>
                                                <input type="password" name="password" placeholder="密碼">
                                            </div>
                                        </div>
                                        <div class="ui fluid large teal submit button">登入</div>
                                        <div class="ui error message"></div>
                                    </div>
                                </form>          
                            </div>                           
                        </div>                        
                        <div class="bottom aligned row">
                            <div class="column">
                                <p>一等一科技版權所有</p>
                           
                        </div>
                    </div>
                          

                                       
                       
                  
                </div>

            </div>

        </div>
        </div>
    @Scripts.Render("~/bundles/jquery",
    "~/bundles/semanticui/js"
    )

    <script>
        less = {
            async: true
        };
    </script>

        </body>
</html>