

<div class="ui top orange attached secondary  segment">
    <h3 class="ui header">
        員工
    </h3>
</div>

<div class="ui attached segment" ng-show="showBack()">
    <h3 class="ui header" ng-click="goBack()">
        <i class="icon ellipsis horizontal"></i>
    </h3>
</div>
<div class="ui clearing attached segment" ng-repeat="group in groups">
    <h4 class="ui left floated header">
        <span ng-class="setImage(group)"></span>
        <span ng-bind-html="group.Name"></span>
    </h4>
    <div ng-show="group.ChildrenCount + group.UserCount > 0"
         ng-click="goToDepartment(group.GroupId)"
         class="ui right floated right aligned icon purple button ">
        <i class="icon chevron right"></i>
    </div>

</div>

<div class="ui clearing attached segment" ng-repeat="user in users">
    <h4 class="ui left floated header">
        <uof-multi-state-checkbox key="user.UserGuid"
                                  text="user.Name"
                                  default-icon="choice-employee-default"
                                  check-icon="choice-employee-check"
                                  status="2"
                                  on-toogle="onToogle(state, prevState, key, text)"
                                  on-loaded="onLoaded(user.UserGuid)">
        </uof-multi-state-checkbox>

    </h4>
</div>


