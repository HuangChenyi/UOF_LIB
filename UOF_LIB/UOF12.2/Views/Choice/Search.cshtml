
<uof-radio-list color="blue" default-key="department" on-changed="selected(key)">
    <uof-radio-list-item text="員工" key="employee"></uof-radio-list-item>
    <uof-radio-list-item text="部門" key="department"></uof-radio-list-item>
</uof-radio-list>


<div class="ui form">
    <div class="ui bottom attached  segment green ">
        <div class="field">
            <input type="text" name="name" ng-change="keyup()" ng-model="keyword" placeholder="關鍵字">
        </div>
    </div>
</div>
<div class="ui clearing attached segment" ng-repeat="group in groups">
    <h4 class="ui left floated header">
        <uof-multi-state-checkbox key="group.GroupId"
                                  text="group.Name"
                                  default-icon="choice-group-default"
                                  check-icon="choice-group-check"
                                  plus-icon="choice-group-plus"
                                  status="3"
                                  on-toogle="onGroupToogle(state, prevState, key, text)"
                                  on-loaded="onGroupLoaded(group.GroupId)">
        </uof-multi-state-checkbox>
    </h4>
    <div ng-show="group.ChildrenCount + group.UserCount > 0"
         ng-click="goToDepartment(group.GroupId)"
         class="ui right floated right aligned icon purple button ">
        <i class="icon chevron right"></i>
    </div>

</div>
<div class="ui attached segment" ng-repeat="user in users">
    <h4 class="ui header">      
            <uof-multi-state-checkbox key="user.UserGuid"
                                      text="user.Name"
                                      default-icon="choice-employee-default"
                                      check-icon="choice-employee-check"
                                      status="2"
                                      on-toogle="onUserToogle(state, prevState, key, text)"
                                      on-loaded="onUserLoaded(user.UserGuid)">
            </uof-multi-state-checkbox>      
    </h4>
</div>