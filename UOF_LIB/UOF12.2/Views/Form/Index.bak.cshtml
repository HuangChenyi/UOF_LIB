@using System.Web.Optimization;

<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />

    @*Set the viewport width to device width for mobile *@
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">


    <title>@ViewBag.Title</title>

    @Styles.Render("~/bundles/semanticui/css", "~/bundles/picker/css")

    @*@Scripts.Render("~/bundles/modernizr")*@
    <link rel="stylesheet/less" type="text/css" href="~/mForm/Content/Less/style.less">
    <style>
        body#example, body#example .ui.header {
            font-family: "Segoe UI", Arial, Helvetica, "文泉驛正黑", "WenQuanYi Zen Hei", "微軟正黑體", "Microsoft JhengHei", "黑體-繁", "Heiti TC", "微软雅黑", "Microsoft YaHei", sans-serif;
        }

        .field.error .ui.label {
            white-space: normal !important;
        }
    </style>
    @*@Scripts.Render("~/bundles/uof/js")*@
    <script>

         @if (ViewBag.UserId != null)
         {
             <text>
        uofScript = {};
        uofScript.setting = {
            userId: '@ViewBag.UserId',
            serverRoot: '@ViewBag.ServerRoot',
            token: '@ViewBag.Token'
        };

        </text>
         }


    </script>
</head>
<body id="example" ng-app="MobileForm" ng-controller="indexCtrl">

    <div class="pusher">
        <div class="ui top large inverted orange fixed menu">
            <div class="item">
                <i class="content icon"></i>
                電子簽核
            </div>
        </div>

        <div class="full height">

            <div class=" header segment">
                <div class="container">
                    <div class="introduction">
                        <h1 class="ui header blue" ng-bind-html="pool.viewTitle"></h1>
                    </div>

                </div>
            </div>

            <div class="main container">
                <div class="example">

                    <form class="ui form" name="uofForm">

                        <div class="ui olive clearing segment" ng-show="leaveShow">
                            <h4 class="ui left floated header">
                                請假單
                            </h4>
                            <div class="ui right floated  primary animated button" ng-click="apply('leave')">
                                <div class="visible content">申請</div>
                                <div class="hidden content">
                                    <i class="arrow circle right icon"></i>
                                </div>
                            </div>

                        </div>
                        @*<div class="ui olive clearing segment">
                            <h4 class="ui left floated header">
                                出差單
                            </h4>
                            <div class="ui right floated  primary animated button" ng-click="apply('leave')">
                                <div class="visible content">申請</div>
                                <div class="hidden content">
                                    <i class="arrow circle right icon"></i>
                                </div>
                            </div>

                        </div>*@
                        <div class="ui olive clearing segment"  ng-show="punchShow">
                            <h4 class="ui left floated header">
                                補刷卡單
                            </h4>
                            <div class="ui right floated  primary animated button" ng-click="apply('punch')">
                                <div class="visible content">申請</div>
                                <div class="hidden content">
                                    <i class="arrow circle right icon"></i>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery",
    "~/bundles/semanticui/js",
    "~/bundles/angular",
    "~/mForm/ng/formIndex.js"
    )



    @*Use the Scripts section to define page specific scripts*@



    <script>
        less = {
            async: true
        };



    </script>
</body>
</html>
