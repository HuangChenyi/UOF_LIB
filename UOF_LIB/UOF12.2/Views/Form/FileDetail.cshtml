<style>

     .ui.button input[type="file"] {
         position: absolute;
         top: 0;
        right: 0;
         z-index: 1;
         font: 200px monospace !important;
         filter: alpha(opacity=0);
         opacity: 0;
         margin: 0;
         padding: 0;
         cursor: pointer;
     }
    .ui.items > .item > .image > canvas {
        display: block;
        width: 100%;
        height: auto;
        border-radius: .125rem;
        border: none;
    }
    .ui.tiny.image canvas {
        max-width: 100%;
        font-size: .85714286rem;
    }
