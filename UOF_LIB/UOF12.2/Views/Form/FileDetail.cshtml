            <div class="ui attached segment" ng-repeat="item in uploader.queue">

                <div class="ui header">
                    <div ng-show="isImage(item.file)" class="ui tiny image left floated">
                        <div ng-thumb="{ file: item._file, height: 100 }"></div>
                    </div>
                    <div class="content right floated">
                        <div class="ui medium header" ng-bind-html="item.file.name"></div>
                        <div class="sub header"><span ng-bind-html="item.file.size/1024|number:2"></span>kb</div>
                    </div>
                </div>
                <div style="clear: both; margin: 0"></div>
                <div class="ui grid">
                    <div class="sixteen wide column" ng-show="item.isError">
                        <div class="ui icon negative message">
                            <i class="warning circle icon"></i>
                            <div class="content">
                                <div class="header">
                                    檔案上傳失敗,可能是檔案大小超過限制
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="ten wide column">
                            <div ng-show="uploader.isHTML5">
                                <div ng-class="item.isSuccess ? 'success' : item.isError ? 'error':''" class="ui progress">
                                    <div class="bar" ng-style="{ 'width': item.progress + '%' }">
                                        <div class="progress active" data-percent="0"><span ng-bind-html="item.progress||0"></span>%</div>
